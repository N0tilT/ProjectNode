<Window x:Class="node.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:node"
        mc:Ignorable="d"
        Title="Задачник" Height="880" Width="1720" WindowStyle="ThreeDBorderWindow">
    <Grid Background="#FFDEAD" Cursor="">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="457*"/>
            <ColumnDefinition Width="183*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="navBar" MinWidth="1600" Margin="50,30,50,0" Background="#FAEBD7" Padding="20" VerticalAlignment="Top" MaxWidth="1800" CornerRadius="35" Grid.ColumnSpan="2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Gray"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Tasks" FontSize="70" FontWeight="Bold"/>
                <Grid Margin="1100 0 0 0">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="AddButton" HorizontalAlignment="Right"  FontSize="30" Margin="20" Height="70" Width="90" Background="#FAEBD7" BorderBrush="#FAEBD7">
                            <Image Source="C:\Users\1\Documents\GitHub\node1\node\elements\plus.png"></Image>
                        </Button>
                        <Button x:Name="MenuButton" HorizontalAlignment="Right"  FontSize="30"  Margin="20" Height="70" Width="90" Background="#FAEBD7" BorderBrush="#FAEBD7">
                            <Image Source="C:\Users\1\Documents\GitHub\node1\node\elements\eeee.png"></Image>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        <Border x:Name="Task" MinWidth="600" Margin="50,220,39,0" Background="#FAEBD7" Padding="20" VerticalAlignment="Top" MaxWidth="1400" CornerRadius="35" Height="598">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Gray"/>
            </Border.Effect>
            <ListBox x:Name="MenuPanel"
                                 ItemsSource="{Binding Lists}"
                                 SelectedItem="{Binding SelectedTask}"
                                 Style="{StaticResource ListTheme}"
                                 MouseDown="MenuPanel_MouseDown"
                                 ItemContainerStyle="{StaticResource ListBoxItemTheme}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"  />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        <Border x:Name="Info" MinWidth="300" Margin="1228,220,50,0" Background="#FAEBD7" Padding="20" VerticalAlignment="Top" MaxWidth="1400" CornerRadius="35" Height="598" Grid.ColumnSpan="2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Gray"/>
            </Border.Effect>
        </Border>
    </Grid>
</Window>